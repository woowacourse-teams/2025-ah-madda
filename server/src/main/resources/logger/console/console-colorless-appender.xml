<?xml version="1.0" encoding="UTF-8" ?>
<included>
    <appender name="console-colorless-appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%level][%d{MM-dd HH:mm:ss}][%X{request_id:-startup}][%replace(%logger{20}){'\\w\\.', ''}] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
</included>
