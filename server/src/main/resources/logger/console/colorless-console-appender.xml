<?xml version="1.0" encoding="UTF-8" ?>

<included>
    <appender name="colorless-console-appender" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%level][%d{MM-dd HH:mm:ss}][%X{request_id:-startup}][%replace(%logger{20}){'\\w\\.', ''}] %msg%n</pattern>
        </layout>
    </appender>
</included>
