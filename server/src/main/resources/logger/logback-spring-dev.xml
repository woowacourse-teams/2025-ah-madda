<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="5 seconds">
    <include resource="logger/console/colorless-console-appender.xml"/>
    <include resource="logger/console/parameter-appender.xml"/>

    <logger name="org.springframework.boot" level="INFO">
        <appender-ref ref="colorless-console-appender"/>
    </logger>

    <logger name="com.ahmadda" level="TRACE">
        <appender-ref ref="colorless-console-appender"/>
    </logger>

    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE">
        <appender-ref ref="parameter-appender"/>
    </logger>

</configuration>
