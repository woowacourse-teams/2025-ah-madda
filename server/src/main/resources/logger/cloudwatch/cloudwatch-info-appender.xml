<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="cloudwatch-info-appender" class="ca.pjer.logback.AwsLogsAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%level][%d{MM-dd HH:mm:ss}][%X{trace_id:-startup}][%replace(%logger{20}){'\\w\\.', ''}] %msg%n%ex</pattern>
        </layout>

        <logGroupName>/aws/ec2/ahmadda-prod-server</logGroupName>
        <logStreamName>logs-info</logStreamName>
        <logRegion>ap-northeast-2</logRegion>

        <maxBatchLogEvents>50</maxBatchLogEvents>
        <maxFlushTimeMillis>30000</maxFlushTimeMillis>
        <maxBlockTimeMillis>5000</maxBlockTimeMillis>
    </appender>
</included>
