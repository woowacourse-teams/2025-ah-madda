{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true, // React를 ESM으로 import할 수 있게 해줘요

    "jsx": "react-jsx", // JSX를 React 문법으로 변환해요
    "jsxImportSource": "@emotion/react",
    "baseUrl": "."
  },
  "include": ["./**/*.ts", "src/main.tsx", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
